<p id="notice"><%= notice %></p>

<p>
  <h1><%= @client.name %></h1>
</p>

<p>
  <strong>Rut:</strong>
  <%= @client.client_rut %>
</p>


<%= link_to 'Crear Empresa', new_client_company_path(@client) %>

<%= link_to 'Editar', edit_client_path(@client) %> |
<%= link_to 'Volver', clients_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Rut Empresa</th>
      <th>Nombre Empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client.companies.each do |company| %>
      <tr>
        <td><%= company.taxpayer_id_company %></td>
        <td><%= company.business_name %></td>
        <td><%= link_to 'Mostrar', client_company_path(company.client, company) %></td>
        <td><%= link_to 'Editar', edit_client_company_path(company.client, company) %></td>
        <td><%= link_to 'Borrar', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
