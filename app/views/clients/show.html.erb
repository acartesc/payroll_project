<% content_for :sidebar do %>
      <%= render 'layouts/sidebars/sidebar_show_client' %>
 <% end %>

<p>
  <h1><%= @client.name %></h1>
</p>

<p>
  <strong>Rut:</strong>
  <%= @client.client_rut %>
</p>

<br>
<br>

<table id="myTable" class="table">
  <thead>
    <tr>
      <th>Rut Empresa</th>
      <th>Nombre Empresa</th>
      <th>Opciones</th>
    </tr>
  </thead>

<h2>Empresas</h2>

  <tbody>
    <% @client.companies.each do |company| %>
      <tr>
        <td><%= company.taxpayer_id_company %></td>
        <td><%= company.business_name %></td>
        <td><%= link_to 'Mostrar', client_company_path(company.client, company) %>
        <%= link_to 'Editar', edit_client_company_path(company.client, company) %>
        <%= link_to 'Borrar', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
