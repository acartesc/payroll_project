<p id="notice"><%= notice %></p>

<p>
  <h1><%= @company.business_name %></h1>
</p>

<p>
  <strong>Rut:</strong>
  <%= @company.taxpayer_id_company %>
</p>
<%= link_to 'Crear Trabajador', new_company_worker_path(@company) %>
<%= link_to 'Editar', edit_company_path(@company) %>
<%= link_to 'Volver', client_path(@company.client) %>

<br>
<br>

<h1>Trabajadores</h1>

<table>
  <thead>
    <tr>
      <th>Rut</th>
      <th>First name</th>
      <th>Last name1</th>
      <th>Last name2</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company.workers.each do |worker| %>
      <tr>
        <td><%= worker.rut %></td>
        <td><%= worker.first_name %></td>
        <td><%= worker.last_name1 %></td>
        <td><%= worker.last_name2 %></td>

        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
